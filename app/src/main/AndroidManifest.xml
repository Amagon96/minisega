<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andree.minisega">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FaltasActivity"></activity>
        <activity android:name=".MateriaAlumnosActivity" />
        <activity android:name=".MateriaActivity" />
        <activity android:name=".NewMateriaActivity" />
        <activity android:name=".MateriasActivity" />
        <activity android:name=".AlumnoActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AlumnosActivity"
            android:label="Alumnos"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andree.minisega.MainActivity" />
        </activity>
        <activity
            android:name=".NewAlumnActivity"
            android:label="Nuevo Alumno"
            android:parentActivityName=".AlumnosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.andree.minisega.AlumnosActivity" />
        </activity>
    </application>

</manifest>